{
  "appId": "com.safebus.app",
  "appName": "SafeBus",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "Geolocation": {
      "androidScanWifiInterval": 10000
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "ios": {
    "contentInset": "always"
  },
  "android": {
    "backgroundColor": "#ffffffff"
  }
}